<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5FFFA"
    android:padding="10dp"
    tools:context=".activities.LoaiMonAnActivity">

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Thông Tin Loại Món Ăn"
        android:textColor="#006769"
        android:textSize="15pt"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mã loại món"
        android:textColor="#006769"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtMaLoaiMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Ma Loai Mon"
        android:inputType="textPersonName"
        android:textColor="#006769"
        android:textColorHint="#006769"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên Món"
        android:textColor="#006769"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/edtTenLoaiMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Tên Loại Món"
        android:inputType="textPersonName"
        android:textColor="@color/black"
        android:textColorHint="#006769"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLuu"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:backgroundTint="#006769"
            android:text="Thêm"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSua"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:backgroundTint="#006769"
            android:text="Sửa" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:backgroundTint="#006769"
            android:text="Hủy"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:backgroundTint="#006769"
            android:text="Xóa"
            android:textColor="@color/white" />
    </LinearLayout>

    <ListView
        android:id="@+id/lvLoaiMon"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>