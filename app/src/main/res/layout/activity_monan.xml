<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activities.MonAnActivity">

    <Button
        android:id="@+id/btnThemAnh"
        android:layout_width="178dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#006769"
        android:text="Thêm Ảnh" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã món ăn:"
            android:textColor="#006769"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtMaMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên món ăn:"
            android:textColor="#006769"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtTenMon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""  />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đơn giá:"
            android:textColor="#006769"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtDonGia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMaLoaiMonAn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã Loại món ăn:"
            android:textColor="#006769"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spinnerMaLoai"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
          />

        <Button
            android:id="@+id/btnXem"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:backgroundTint="#006769"
            android:text="..."
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnLuu"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:backgroundTint="#006769"
            android:text="Thêm"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnHuy"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:backgroundTint="#006769"
            android:text="Hủy"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/btnSua"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:backgroundTint="#006769"
            android:text="Sửa" />

        <Button
            android:id="@+id/btnXoa"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:backgroundTint="#006769"
            android:text="Xóa"
            android:textColor="@color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Danh sách món ăn"
        android:textColor="#006769"
        android:textSize="10pt"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/lvMonAn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF" />

</LinearLayout>